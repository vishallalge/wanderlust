<Style>
  .search-btn{
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    margin-left: 0.7rem;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: white;
  }
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }
  .search-inp{
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }
</Style>

<nav class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top">
  <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/listings">Explore</a>
    </div>

    <div class="navbar-nav ml-auto" >
      <form class="d-flex">
        <input class="form-control me-2 search-inp" type="search" placeholder="Search destination">
        <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
      </form>
    </div>

    <div class="navbar-nav ml-auto">
      <a class="nav-item nav-link" href="/listings/new">Airbnb your home</a>
      <% if(!currUser){ %>
        <a class="nav-item nav-link" href="/signup"><b>Sign Up</b> </a>
        <a class="nav-item nav-link" href="/login"><b>Log In</b></a>
      <% } %>

      <% if(currUser){ %>
        <a class="nav-item nav-link" href="/logout"><b>Log Out</b></a>
      <% } %>
    </div>
  </div>
</nav>